{
    "name": "affvisine",
    "version": "0.0.0",
    "type": "module",
    "description": "A static site project for affvisine",
    "directories": {
        "test": "tests"
    },
    "scripts": {
        "dev": "parcel src/index.html",
        "build": "node scripts/get-git-info.js && parcel build src/index.html --public-url ./",
        "build:dev": "parcel build src/index.html",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
        "test:all": "npm run test:coverage",
        "lint": "eslint src/ tests/",
        "lint:fix": "eslint src/ tests/ --fix",
        "format": "prettier --write src/ tests/",
        "format:check": "prettier --check src/ tests/",
        "prepare": "husky"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jkeifer/affvisine.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/jkeifer/affvisine/issues"
    },
    "homepage": "https://jkeifer.github.io/affvisine",
    "devDependencies": {
        "@eslint/js": "^9.35.0",
        "benchmark": "^2.1.4",
        "eslint": "^9.35.0",
        "fast-check": "^4.3.0",
        "husky": "^9.1.7",
        "jest": "^30.1.3",
        "jest-canvas-mock": "^2.5.2",
        "jest-environment-jsdom": "^30.2.0",
        "lint-staged": "^16.1.6",
        "parcel": "^2.16.0",
        "prettier": "^3.6.2"
    },
    "lint-staged": {
        "*.{js,mjs}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,html,css}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "gl-matrix": "^3.4.4"
    }
}
